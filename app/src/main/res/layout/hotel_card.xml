<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
    android:elevation="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
    android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints">
    <android.support.constraint.ConstraintLayout
    android:elevation="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/hotel_nm"
    android:gravity="center"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="The Taj Hotel"
    android:textStyle="bold"
    android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        />

        <TextView
            android:id="@+id/hotel_desptn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:text="Hello World, We need Volunteers for the Collection of food"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hotel_nm" />
        <TextView
            android:id="@+id/conti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contributor"

            android:gravity="center_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/hotel_desptn"
            app:layout_constraintBottom_toTopOf="@+id/avatars"
            app:layout_constraintLeft_toLeftOf="parent"


            />

    <LinearLayout
        android:id="@+id/avatars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conti"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
               >

    <ImageView
        android:visibility="invisible"
        android:layout_margin="2dp"
        android:elevation="3dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_launcher_round"/>
        <ImageView
            android:layout_margin="2dp"
            android:elevation="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile1"/>
        <ImageView

            android:layout_margin="2dp"
            android:elevation="3dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/profile2"/>
    <ImageView

        android:visibility="invisible"
        android:layout_margin="2dp"
        android:elevation="3dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_launcher_round"/>
    </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>