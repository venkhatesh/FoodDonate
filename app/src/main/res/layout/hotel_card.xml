<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
    android:elevation="15dp"
    android:layout_margin="5dp"
        android:layout_height="180dp"
        android:layout_width="wrap_content"
        tools:ignore="MissingConstraints">
    <android.support.constraint.ConstraintLayout
    android:elevation="15dp"
    android:layout_width="190dp"
    android:layout_height="160dp"
        >
    <TextView
        android:id="@+id/hotel_nm"
    android:gravity="center"
    android:padding="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="The Taj Hotel"
    android:textStyle="bold"
    android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        />

        <TextView
            android:id="@+id/hotel_desptn"
            android:layout_width="wrap_content"
            android:layout_height="59dp"
            android:padding="5dp"
            android:text="Hello World, We need Volunteers for the Collection of food"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hotel_nm" />
        <TextView
            android:id="@+id/conti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contributor"
            app:layout_constraintTop_toBottomOf="@+id/hotel_desptn"
            app:layout_constraintBottom_toTopOf="@+id/avatars"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="5dp"

            />

    <LinearLayout
        android:id="@+id/avatars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conti"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        >
    <ImageView
        android:layout_margin="2dp"
        android:elevation="3dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_launcher_round"/>
    <ImageView

        android:layout_margin="2dp"
        android:elevation="3dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_launcher_round"/>
    <ImageView
        android:visibility="invisible"
        android:layout_margin="2dp"
        android:elevation="3dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_launcher_round"/>
    <ImageView

        android:visibility="invisible"
        android:layout_margin="2dp"
        android:elevation="3dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:src="@mipmap/ic_launcher_round"/>
    </LinearLayout>
    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>