<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_card_3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"

    android:layout_margin="16dp"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/food_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 jan 2018"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"

            />
        <TextView
            android:layout_margin="5dp"
            android:id="@+id/food_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.30 pm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/food_date"
            app:layout_constraintBottom_toBottomOf="parent"

            />
        <TextView
            android:textStyle="bold"
            android:text="COMPOST"
            android:layout_margin="5dp"
            android:id="@+id/food_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1"
            android:textColor="@color/red"

            />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
