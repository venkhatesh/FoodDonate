<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Hotel_Home">


<android.support.v7.widget.CardView
    android:id="@+id/image_card"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.1"



    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_card_image"
            android:src="@drawable/hotel_image"
            android:alpha="0.3"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="match_parent"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/hotel_name_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="HOTEL_NAME"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/hotel_add_image"
            app:layout_constraintVertical_bias="0.9"
            />
        <TextView
            android:id="@+id/hotel_add_image"
            android:text="Address in short ,Navi Mumbai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hotel_name_image"
            app:layout_constraintVertical_bias="0.9"
            />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
    <TextView
        android:layout_margin="16dp"
        android:id="@+id/past"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/list_card_1"
        android:text="Past Contibutions"
        android:textSize="15dp"
        android:textStyle="bold"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/list_card_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/past"
        app:layout_constraintBottom_toTopOf="@id/list_card_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/food_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 jan 2018"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/food_time_1"

                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/food_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.30 pm"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/food_date_1"
                app:layout_constraintBottom_toBottomOf="parent"

                />
            <TextView
                android:textStyle="bold"
                android:text="In-Progress"
                android:layout_margin="5dp"
                android:id="@+id/food_status_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:textColor="@color/orange"

                />
        </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/list_card_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/list_card_1"
        app:layout_constraintBottom_toTopOf="@id/list_card_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">
            <TextView

                android:layout_margin="5dp"
                android:id="@+id/food_date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 jan 2018"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/food_time_2"
                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/food_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.30 pm"
                app:layout_constraintTop_toBottomOf="@+id/food_date_2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <TextView
                android:id="@+id/food_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="DONATED"
                android:layout_margin="5dp"
                android:textColor="@color/green"
                />
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/list_card_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/past"
        app:layout_constraintBottom_toTopOf="@id/list_card_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_margin="16dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            >

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/food_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 jan 2018"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/food_time_3"

                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/food_time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6.30 pm"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/food_date_3"
                app:layout_constraintBottom_toBottomOf="parent"

                />
            <TextView
                android:textStyle="bold"
                android:text="COMPOST"
                android:layout_margin="5dp"
                android:id="@+id/food_status_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="1"
                android:textColor="@color/red"

                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="16dp"
        app:srcCompat="@android:drawable/ic_input_add"
         />


</android.support.constraint.ConstraintLayout>