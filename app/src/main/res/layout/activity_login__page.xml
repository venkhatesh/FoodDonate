<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login_Page">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginback"
        android:alpha="0.5"
        android:scaleType="fitXY"
        />
    <android.support.v7.widget.CardView
        android:id="@+id/cardlogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="200dp"
        android:elevation="8dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textSize="20sp"
                android:text="Login"
                android:textStyle="bold"
                android:layout_margin="20dp"
                />
            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/login"
                app:layout_constraintBottom_toTopOf="@+id/user_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Join a Cause for Betterment Of society"
                />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:layout_constraintTop_toBottomOf="@id/description"
                android:spinnerMode="dropdown"/>

            <EditText
                android:id="@+id/gov_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/spinner1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pass1"
                android:hint="Enter Registration Id"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/gov_id"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pass1"
                android:hint="Enter User Name"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                />
            <EditText
                android:id="@+id/pass1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/user_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/pass2"
                android:hint="Enter Password"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:inputType="textPassword"
                />

            <EditText
                android:inputType="textPassword"
                android:id="@+id/pass2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pass1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="Confirm Password"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                />



        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


    <Button
        android:id="@+id/hotel_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#fff"
        android:background="@drawable/mybutton"
        android:text="Hotel"
        app:layout_constraintTop_toBottomOf="@+id/cardlogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ngo_button"
        android:layout_marginLeft="10dp"
        />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/hotel_button"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/ngo_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#fff"
        android:background="@drawable/mybutton"
        android:text="NGO"
        app:layout_constraintTop_toBottomOf="@+id/cardlogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/volunteer_button"

        />

    <Button
        app:layout_constraintLeft_toRightOf="@+id/ngo_button"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/volunteer_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#fff"
        android:background="@drawable/mybutton"
        android:text="Volunteer"
        app:layout_constraintTop_toBottomOf="@+id/cardlogin"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</android.support.constraint.ConstraintLayout>